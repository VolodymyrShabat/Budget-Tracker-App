@model IEnumerable<Budget_Tracker_App.Models.Spending>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<table class="styled-table">
    <thead>
        <tr>
            <th>Category</th>
            <th>Spend Amount($)</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Category</td>
            <td>@item.SpendAmount</td>
            <td>
                <a class="table-button-edit" asp-action="Edit" asp-controller="Budget" asp-route-id="@item.Id">Edit
                </a>

                <a class="table-button-delete" asp-action="Delete" asp-controller="Budget" asp-route-id="@item.Id">
                    Delete
                </a>
            </td>
        </tr>
    }
    <tr>
        <td>Total</td>
        <td>@Model.Select(x => x.SpendAmount).Sum()</td>
    </tr>
</table>
